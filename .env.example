# Embedding Configuration
EMBEDDING_MODEL="llama-text-embed-v2"

# Processing Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=75
LOG_LEVEL="INFO"
OUTPUT_DIR="processed_content" 